{
    "manifest_version": 3,
    "name": "FastFeed",
    "version": "1.0",
    "description": "Chrome extension to scrape and analyze reviews in Amazon",
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_popup": "dist/index.html"
    },
    "permissions": [
        "scripting",
        "activeTab",
        "tabs"
    ],
    "host_permissions": [
        "https://amazon.com/*",
        "https://*.amazon.com/*"
    ],
    "content_scripts": [
    {
        "matches": [
            "https://*.amazon.*/*"
            ],
        "js": [
            "content-script.js"
        ],
        "css": [
            "style.css"
        ]
    }
  ]
}